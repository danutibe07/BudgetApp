<div class="container-fluid">
<div class="col header2">
  <div class="row">
    <div class="col-4 col1">
      <%= link_to categories_path do %>
        <%= image_tag 'back-arrow.png', alt: 'Back', class: 'back-icon' %>
      <% end %>
    </div>
    <div class="col col2">New Category</div>
  </div>
</div>
  <%= form_with(model: category, url: categories_path, local: true, html: { multipart: true }) do |form| %>
    <% if category.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

        <ul>
          <% category.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field form-group">
      <%= form.text_field :name, placeholder: 'Enter name here' %>
    </div>
    <div class="field form-group">
      <%= form.file_field :icon, direct_upload: true %>
    </div>
    <div class="field form-group">
      <%= form.text_field :user_id, placeholder: 'Enter user_id' %>
    </div>
</div>
    <div class="btn-new2">
    <%= form.submit "Create Category", class:"neew" %>
    </div>
  <% end %>
</div>

