<div class="col header3">
  <div class="row">
    <div class="col-4 col1">
      <%= link_to categories_path do %>
        <%= image_tag 'back-arrow.png', alt: 'Back', class: 'back-icon' %>
      <% end %>
    </div>
    <div class="col col2">New Expense</div>
  </div>
</div>
<%= form_with(model: @expense, url: expenses_path, local: true) do |form| %>
  <% if @expense.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@expense.errors.count, "error") %> prohibited this expense from being saved:</h2>
      <ul>
        <% @expense.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  

  <div class="field form-group">
    <%= form.text_field :name, placeholder:"Name" %>
  </div>

  <div class="field form-group">
    <%= form.number_field :amount, placeholder:"Amount" %>
  </div>

  <div class="field form-group">
    <%= form.collection_select :category_id, Category.all, :id, :name, prompt: true, placeholder:"category_id" %>
  </div>

  <div class="btn-new2">
    <%= form.submit "Add transaction", class:"neew" %>
    </div>
  <% end %>
</div>
</div>
