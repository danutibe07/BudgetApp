<div class="col header2">
  <div class="row">
    <div class="col-4 col1">
      <%= link_to root_path do %>
        <%= image_tag 'back-arrow.png', alt: 'Back', class: 'back-icon' %>
      <% end %>
    </div>
    <div class="col reg">REGISTER</div>
    <div class="col col2">
      <%= link_to "NEXT", "#", id: "next-button", form: "registration-form" %>
    </div>
  </div>
</div>
</br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: 'registration-form', multipart: true }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.text_field :name, autofocus: true, placeholder: "Name", required: true %>
  </div>

  <div class="field form-group">
    <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email" %>
  </div>

  <div class="field form-group">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
  </div>

  <div class="field form-group">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"password_confirmation" %>
  </div>

<% end %>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const nextButton = document.getElementById('next-button');
    const form = document.getElementById('registration-form');

    nextButton.addEventListener('click', function() {
      form.submit();
    });
  });
</script>
